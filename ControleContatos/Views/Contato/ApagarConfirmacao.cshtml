@model ContatoModel
@{
    ViewData["Title"] = "Confirmacao de apagar o contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-action="Index" asp-asp-controller="Contato">Cancelar</a>
<a class="btn btn-primary btn-block" role="button" asp-asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar</a>